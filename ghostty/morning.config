# Morning routine Ghostty config
# Launch with: ghostty --config-file=~/.dotfiles/ghostty/morning.config

# Include base theme settings
background = 292d3e
foreground = bfc7d5
cursor-color = ffcc00
selection-background = 717cb4
selection-foreground = bfc7d5

# Palenight color palette
palette = 0=#292d3e
palette = 1=#f07178
palette = 2=#c3e88d
palette = 3=#ffcb6b
palette = 4=#82aaff
palette = 5=#c792ea
palette = 6=#89ddff
palette = 7=#d0d0d0
palette = 8=#434758
palette = 9=#ff8b92
palette = 10=#ddffa7
palette = 11=#ffe585
palette = 12=#9cc4ff
palette = 13=#e1acff
palette = 14=#a3f7ff
palette = 15=#ffffff

# Font
font-family = FiraCode Nerd Font Mono
font-size = 13
font-feature = +calt

# Morning-specific settings
fullscreen = true
command = claude /morning

# Window settings
window-padding-x = 4
window-padding-y = 4

# Cursor
cursor-style = block
cursor-style-blink = true
