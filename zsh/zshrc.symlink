# Utility directories and environment
export ZSH=$HOME/.dotfiles
export ZSH_VAR_LIB_DIR=$HOME/.var/lib/zsh
[[ ! -d $ZSH_VAR_LIB_DIR ]] && mkdir -p $ZSH_VAR_LIB_DIR

# Terminal settings
export LESS='-iR'
export GPG_TTY=$TTY
export REPORTTIME=10

# Disable XON/XOFF flow control so Ctrl-S can be used as a keybinding
# Without this, Ctrl-S freezes the terminal (Ctrl-Q unfreezes)
stty -ixon 2>/dev/null

# Programming languages and tools
export GOPATH=$HOME/go
export DENO_INSTALL="$HOME/.deno"

if [[ $IS_MACOS -eq 1 ]]; then
  export PNPM_HOME="$HOME/Library/pnpm"
  export SPARK_HOME="$HOME/pixiedust/bin/spark/spark-2.4.3-bin-hadoop2.7"

  # Java - only set if available (avoids errors during shell startup)
  if /usr/libexec/java_home -v 1.8 &>/dev/null; then
    export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)
  fi

  # Hadoop configuration
  export HADOOP_VERSION=2.7.3
  export HADOOP_HOME=/usr/local/Cellar/hadoop/2.7.3
  export HADOOP_CONF_DIR=/usr/local/Cellar/hadoop/2.7.3/libexec/etc/hadoop
else
  export PNPM_HOME="$HOME/.local/share/pnpm"
fi

# Homebrew settings
export HOMEBREW_NO_AUTO_UPDATE="1"

# Path configuration
typeset -U path # force path array to have unique values

# Common paths (both macOS and Linux)
path=(
  $HOME/.local/bin
  $HOME/.bun/bin
  $HOME/.serverless/bin
  $HOME/.jenv/bin
  /usr/local/go/bin
  $HOME/go/bin
  $PNPM_HOME
  $DENO_INSTALL/bin
  $HOME/bin
  /usr/bin
  /usr/local/bin
  /usr/local/sbin
  ./bin
  $HOME/.rbenv/shims
  $HOME/.sfs
  $ZSH/bin
  $path
)

# macOS-specific paths
if [[ $IS_MACOS -eq 1 ]]; then
  path=(
    /opt/homebrew/bin
    $HOME/miniconda3/bin
    ~/opt/anaconda3/bin
    /usr/local/opt/coreutils/libexec/gnubin
    /usr/local/Cellar/ruby/2.5.0/bin
    /usr/local/Cellar/emacs/25.3/bin
    /Applications/MiniZincIDE.app/Contents/Resources
    $HOME/Library/Python/3.7/bin
    /usr/local/Cellar/node/12.12.0/lib/node_modules/@aws-amplify/cli/bin
    $path
  )
fi

# Linux-specific paths (Linuxbrew)
if [[ $IS_LINUX -eq 1 ]]; then
  if [[ -d /home/linuxbrew/.linuxbrew ]]; then
    eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
  fi
fi

# Man path configuration
typeset -U manpath
manpath=(
  /usr/local/opt/coreutils/libexec/gnuman
  /usr/local/man
  /usr/local/mysql/man
  /usr/local/git/man
  $manpath
)

# Source additional local files if they exist.
if [[ $HAS_Z4H -eq 1 ]]; then
  z4h source ~/.env.zsh
  z4h load ohmyzsh/ohmyzsh/plugins/git

  # Define key bindings.
  z4h bindkey undo Ctrl+/   Shift+Tab
  z4h bindkey redo Option+/
  z4h bindkey z4h-cd-back    Shift+Left
  z4h bindkey z4h-cd-forward Shift+Right
  z4h bindkey z4h-cd-up      Shift+Up
  z4h bindkey z4h-cd-down    Shift+Down
else
  # Fallback: source files directly
  [[ -f ~/.env.zsh ]] && source ~/.env.zsh
fi

# Alt+K deletes to end of line (Ctrl+K is used by tmux for pane navigation)
bindkey '^[k' kill-line

# Autoload functions.
autoload -Uz zmv

# Define functions and completions.
function md() { [[ $# == 1 ]] && mkdir -p -- "$1" && cd -- "$1" }
compdef _directories md

# Go up multiple directories with u [number]
u() {
  set -A ud
  ud[1+${1-1}]=
  cd ${(j:../:)ud}
}

# Tmux session management helpers
# Create or attach to a named session
tn() {
  if [[ $# -eq 0 ]]; then
    echo "Usage: tn <session-name>"
    echo "Creates a new tmux session or attaches to existing one"
    return 1
  fi
  tmux new -A -s "$1"
}

# Switch to a different session
ts() {
  if [[ $# -eq 0 ]]; then
    # Interactive session selection with fzf
    local session
    session=$(tmux list-sessions -F '#{session_name}' 2>/dev/null | fzf --height=40% --reverse)
    [[ -n "$session" ]] && tmux switch-client -t "$session"
  else
    tmux switch-client -t "$1"
  fi
}

# List all tmux sessions
tl() {
  tmux list-sessions
}

# Kill a tmux session
tk() {
  if [[ $# -eq 0 ]]; then
    echo "Usage: tk <session-name>"
    return 1
  fi
  tmux kill-session -t "$1"
}

# Show tmux/nvim cheatsheet
thelp() {
  if [[ -n "$TMUX" ]]; then
    # Inside tmux: show in a popup (if tmux 3.2+) or new window
    tmux_version=$(tmux -V | cut -d' ' -f2)
    if [[ $(echo "$tmux_version >= 3.2" | bc 2>/dev/null || echo 0) -eq 1 ]]; then
      tmux display-popup -E -w 80% -h 80% "less ~/.dotfiles/tmux/cheatsheet.txt"
    else
      tmux new-window "less ~/.dotfiles/tmux/cheatsheet.txt"
    fi
  else
    # Outside tmux: just display
    less ~/.dotfiles/tmux/cheatsheet.txt
  fi
}

# Utility for logging into EKS more easily
eks-tok() {
  if command -v aws &> /dev/null && command -v jq &> /dev/null; then
    aws eks get-token --cluster "$1" | jq -r ".status.token" | pbcopy
  else
    echo "Required tools (aws cli or jq) not found."
  fi
}

# Quick idea capture using Claude Code /idea command
idea() {
  if [[ $# -eq 0 ]]; then
    echo "Usage: idea <your idea text>"
    return 1
  fi
  command claude --dangerously-skip-permissions -p "/idea $*"
}

# Define named directories: ~w <=> Windows home directory on WSL.
[[ -z $z4h_win_home ]] || hash -d w=$z4h_win_home

source ~/.dotfiles/zsh/aliases.zsh

# Set shell options
setopt glob_dots     # no special treatment for file names with a leading dot
setopt no_auto_menu  # require an extra TAB press to open the completion menu
setopt autocd        # cd into directory by typing directory name
setopt extended_glob # Extended globbing

# History options (best practices)
setopt SHARE_HISTORY              # Share history between all sessions immediately
setopt HIST_EXPIRE_DUPS_FIRST     # Expire duplicates first when trimming
setopt HIST_IGNORE_DUPS           # Don't record consecutive duplicates
setopt HIST_IGNORE_ALL_DUPS       # Delete old duplicate entries from history
setopt HIST_FIND_NO_DUPS          # Don't display duplicates when searching
setopt HIST_IGNORE_SPACE          # Don't record commands starting with space
setopt HIST_SAVE_NO_DUPS          # Don't write duplicates to history file
setopt HIST_VERIFY                # Show command before running from history
setopt EXTENDED_HISTORY           # Save timestamp and duration

# Google Cloud SDK
if [ -f "$HOME/google-cloud-sdk/path.zsh.inc" ]; then
  source "$HOME/google-cloud-sdk/path.zsh.inc"
fi
if [ -f "$HOME/google-cloud-sdk/completion.zsh.inc" ]; then
  source "$HOME/google-cloud-sdk/completion.zsh.inc"
fi

source ~/.dotfiles/zsh/aliases.zsh

# Bun installation directory (path added in path array above)
export BUN_INSTALL="$HOME/.bun"

# bun completions
[ -s "$HOME/.bun/_bun" ] && source "$HOME/.bun/_bun"

# Rust (cargo) environment
[ -f "$HOME/.cargo/env" ] && source "$HOME/.cargo/env"

if command -v zoxide >/dev/null 2>&1; then
  eval "$(zoxide init zsh)"
fi

# Atuin - magical shell history
if command -v atuin >/dev/null 2>&1; then
  eval "$(atuin init zsh)"
fi

# Navi - interactive cheatsheets (Ctrl+G)
if command -v navi >/dev/null 2>&1; then
  eval "$(navi widget zsh)"
fi

export TZ="America/Los_Angeles"
# Added by LM Studio CLI (lms) - macOS only
if [[ $IS_MACOS -eq 1 ]]; then
  export PATH="$PATH:$HOME/.lmstudio/bin"
fi

# pnpm - PNPM_HOME already set above based on OS
export PATH="$PNPM_HOME:$PATH"

# Palenight ls colors
export LSCOLORS="Gxfxcxdxcxegedabagacad"
export LS_COLORS="di=1;38;5;111:ln=38;5;117:so=38;5;221:pi=38;5;221:ex=1;38;5;114:bd=38;5;111:cd=38;5;117:su=38;5;204:sg=38;5;204:tw=1;38;5;117:ow=1;38;5;117:fi=00"
export CLICOLOR=1

# direnv hook
if command -v direnv >/dev/null 2>&1; then
  eval "$(direnv hook zsh)"
fi

# fnm (Fast Node Manager)
# Uses Node from .nvmrc/.node-version on cd; sets default otherwise
if command -v fnm >/dev/null 2>&1; then
  eval "$(fnm env --use-on-cd --log-level=quiet --shell zsh)"
  # Ensure old NVM bins don't shadow fnm-managed Node
  path=(${path:#$HOME/.nvm/versions/*/bin})
  # Re-prioritize Bun bin after fnm prepends its path
  path=($HOME/.bun/bin ${path:#$HOME/.bun/bin})
fi

# >>> codex-cli defaults (added by assistant) >>>
# Ensure Codex CLI uses web search and bypasses approvals + sandbox (DANGEROUS)
if command -v codex >/dev/null 2>&1; then
  alias codex='command codex --search --dangerously-bypass-approvals-and-sandbox'
fi
