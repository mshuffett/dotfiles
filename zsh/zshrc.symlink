# Configure git pager: cat in Cursor (non-interactive), delta or bat in terminal
if [[ -n "$CURSOR_AGENT" ]]; then
  export GIT_PAGER=cat
else
  # Use delta if available, otherwise bat, otherwise less with better defaults
  if command -v delta &> /dev/null; then
    export GIT_PAGER="delta"
  elif command -v bat &> /dev/null; then
    export GIT_PAGER="bat --style=plain --paging=always"
  else
    export GIT_PAGER="less -FRX"
  fi
fi

# Broot launcher - only source if installed
[ -f "$HOME/.config/broot/launcher/bash/br" ] && source "$HOME/.config/broot/launcher/bash/br"

# Alias to get a shell without tmux auto-starting
alias notmux='exec env CURSOR_TRACE_ID=bypass zsh'

# Chafa with automatic tmux passthrough detection
if command -v chafa >/dev/null 2>&1; then
  chafa() {
    if [[ -n "$TMUX" ]]; then
      # Inside tmux: use kitty format with tmux passthrough
      command chafa --format=kitty --passthrough=tmux "$@"
    else
      # Outside tmux: use default (kitty format for Ghostty)
      command chafa --format=kitty "$@"
    fi
  }
fi

