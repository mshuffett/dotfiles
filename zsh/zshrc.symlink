    if [[ -n "$TMUX" ]]; then
      # Inside tmux: use kitty format with tmux passthrough
      command chafa --format=kitty --passthrough=tmux "$@"
    else
      # Outside tmux: use default (kitty format for Ghostty)
      command chafa --format=kitty "$@"
    fi
  }
fi
