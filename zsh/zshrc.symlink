# Define functions and completions.
function md() { [[ $# == 1 ]] && mkdir -p -- "$1" && cd -- "$1" }
compdef _directories md

# Go up multiple directories with u [number]
u() {
  set -A ud
  ud[1+${1-1}]=
  cd ${(j:../:)ud}
}

# Tmux session management helpers
# Create or attach to a named session
tn() {
  if [[ $# -eq 0 ]]; then
    echo "Usage: tn <session-name>"
    echo "Creates a new tmux session or attaches to existing one"
    return 1
  fi
  tmux new -A -s "$1"
}

# Switch to a different session
ts() {
  if [[ $# -eq 0 ]]; then
    # Interactive session selection with fzf
    local session
    session=$(tmux list-sessions -F '#{session_name}' 2>/dev/null | fzf --height=40% --reverse)
    [[ -n "$session" ]] && tmux switch-client -t "$session"
  else
    tmux switch-client -t "$1"
  fi
}

# List all tmux sessions
tl() {
  tmux list-sessions
}

# Kill a tmux session
tk() {
  if [[ $# -eq 0 ]]; then
    echo "Usage: tk <session-name>"
    return 1
  fi
  tmux kill-session -t "$1"
}

# Show tmux/nvim cheatsheet
thelp() {
  if [[ -n "$TMUX" ]]; then
    # Inside tmux: show in a popup (if tmux 3.2+) or new window
    tmux_version=$(tmux -V | cut -d' ' -f2)
    if [[ $(echo "$tmux_version >= 3.2" | bc 2>/dev/null || echo 0) -eq 1 ]]; then
      tmux display-popup -E -w 80% -h 80% "less ~/.dotfiles/tmux/cheatsheet.txt"
    else
      tmux new-window "less ~/.dotfiles/tmux/cheatsheet.txt"
    fi
  else
    # Outside tmux: just display
    less ~/.dotfiles/tmux/cheatsheet.txt
  fi
}

# Utility for logging into EKS more easily
eks-tok() {
  if command -v aws &> /dev/null && command -v jq &> /dev/null; then
    aws eks get-token --cluster "$1" | jq -r ".status.token" | pbcopy
  else
    echo "Required tools (aws cli or jq) not found."
  fi
}

# Quick idea capture using Claude Code /idea command
idea() {
  if [[ $# -eq 0 ]]; then
    echo "Usage: idea <your idea text>"
    return 1
  fi
  command claude --dangerously-skip-permissions -p "/idea $*"
}

